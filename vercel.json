{
  "version": 2,
  "name": "protogx-network",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "app/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "env": {
    "NEXT_PUBLIC_MULTIVERSX_CHAIN": "devnet",
    "NEXT_PUBLIC_WALLET_CONNECT_BRIDGE": "https://bridge.walletconnect.org",
    "NEXT_PUBLIC_IPFS_GATEWAY": "https://gateway.pinata.cloud",
    "NEXT_PUBLIC_APP_NAME": "PROTOGX NETWORK"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.multiversx.com https://*.ipfs.io https://gateway.pinata.cloud"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/game",
      "destination": "/games",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}